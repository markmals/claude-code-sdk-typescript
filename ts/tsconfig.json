{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": ["@types/node"],
        "erasableSyntaxOnly": true
    },
    "include": ["./src/**/*", "./tests/**/*", "./examples/**/*"],
    "exclude": ["node_modules"]
}
